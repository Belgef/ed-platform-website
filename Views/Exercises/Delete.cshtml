@model EdPlatformWebsite.Models.Exercise

@{
    ViewData["Title"] = "Delete";
}

<div class='content centered'>
    <h1 class='title medium'>Are you sure you want to delete this exercise?</h1>
    <h1 class='title small'>@(Html.DisplayTextFor(model => model.Number)+". "+Html.DisplayTextFor(model => model.Name))</h1>
    <p class='medium'>@Html.DisplayFor(model => model.Description)</p>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="button danger" />
        <a asp-action="Index">Back to List</a>
    </form>
</div>