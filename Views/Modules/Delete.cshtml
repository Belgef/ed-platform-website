@model EdPlatformWebsite.Models.Module

@{
    ViewData["Title"] = "Delete";
}

<div class='content centered'>
    <h1 class='title medium'>Are you sure you want to delete module 
        @(Html.DisplayTextFor(model => model.Number)+". "+Html.DisplayTextFor(model => model.Name))?
    </h1>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="button danger" />
        <a asp-action="Index">Back to List</a>
    </form>
</div>
