@model IEnumerable<EdPlatformWebsite.Models.Module>

@{
    ViewData["Title"] = "Index";
}

<div class="content centered">
    <h1 class="title medium">Modules</h1>

    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Number)</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class='centered'>@Html.DisplayFor(modelItem => item.Number)</td>

                    <td class='centered'>@Html.DisplayFor(modelItem => item.Name)</td>

                    <td class='centered'><a class="button" asp-action="Edit" asp-route-id="@item.Id">Edit    </a></td>
                    <td class='centered'><a class="button" asp-action="Delete" asp-route-id="@item.Id">Delete  </a></td>
                </tr>
            }
        </tbody>
    </table>
    <a class="button under-table" asp-action="Create">Add new module</a>
</div>