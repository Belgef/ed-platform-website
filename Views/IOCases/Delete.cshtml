@model EdPlatformWebsite.Models.IOCase

@{
    ViewData["Title"] = "Delete";
}

<div class='content centered'>
    <h1 class='title medium'>Are you sure you want to delete this input-output @Html.DisplayTextFor(model => model.Number)?</h1>
    <h1 class='title small'>@Html.DisplayNameFor(model => model.Input)</h1>
    <p class='medium'>@Html.DisplayFor(model => model.Input)</p>
    <h1 class='title small'>@Html.DisplayNameFor(model => model.Output)</h1>
    <p class='medium'>@Html.DisplayFor(model => model.Output)</p>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="button danger" />
        <a asp-action="Index">Back to List</a>
    </form>
</div>
